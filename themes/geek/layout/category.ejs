<div class="category-container">
  <div class="category-header">
    <h1 class="category-title">All Categories</h1>
    <p class="category-description">
      Discover content organized by topics and themes
    </p>
  </div>

  <!-- All Categories with Posts -->
  <div class="categories-list">
    <% site.categories.each(function(category){ %>
      <div class="category-section">
        <div class="category-header-info">
          <div class="category-icon">
            <i class="fas fa-folder"></i>
          </div>
          <div class="category-meta">
            <h2 class="category-name"><%= category.name %></h2>
            <p class="category-count">
              <%= category.posts.length %> <%= category.posts.length === 1 ? 'post' : 'posts' %>
            </p>
          </div>
        </div>
        
        <div class="category-posts">
          <% category.posts.each(function(post){ %>
            <article class="category-post-item">
              <div class="post-meta">
                <span class="post-date">
                  <i class="fas fa-calendar"></i>
                  <%= date(post.date, 'YYYY-MM-DD') %>
                </span>
                <% if(post.tags && post.tags.length){ %>
                  <div class="post-tags">
                    <% post.tags.forEach(function(tag, i) { %>
                      <% if (i < 2) { %>
                        <span class="tag"><%= tag.name %></span>
                      <% } %>
                    <% }); %>
                  </div>
                <% } %>
              </div>
              <h3 class="post-title">
                <a href="<%- url_for(post.path) %>"><%= post.title %></a>
              </h3>
              <div class="post-excerpt">
                <% if(post.excerpt) { %>
                  <%- strip_html(post.excerpt).substring(0, 120) %>...
                <% } else if(post.content) { %>
                  <%- strip_html(post.content).substring(0, 120) %>...
                <% } %>
              </div>
              <div class="post-actions">
                <span class="read-time">
                  <i class="fas fa-clock"></i>
                  <% const wordCount = strip_html(post.content).split(' ').length; %>
                  <% const readTime = Math.max(1, Math.ceil(wordCount / 200)); %>
                  <%= readTime %> min read
                </span>
                <a href="<%- url_for(post.path) %>" class="read-more-link">
                  Read More <i class="fas fa-arrow-right"></i>
                </a>
              </div>
            </article>
          <% }) %>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<style>
/* Simplified Category Styles */
.category-header {
  text-align: center;
  margin-bottom: 4rem;
  padding: 2rem 0;
}

.category-description {
  color: var(--text-secondary);
  font-size: 1.1rem;
  max-width: 600px;
  margin: 1rem auto 0 auto;
}

.categories-list {
  max-width: 1000px;
  margin: 0 auto;
}

.category-section {
  background: var(--card-bg);
  border: 1px solid var(--border-color);
  border-radius: var(--border-radius);
  margin-bottom: 3rem;
  overflow: hidden;
  transition: var(--transition);
}

.category-section:hover {
  border-color: var(--primary-color);
  box-shadow: var(--shadow-light);
}

.category-header-info {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 2rem;
  background: rgba(127, 255, 0, 0.05);
  border-bottom: 1px solid var(--border-color);
}

.category-icon {
  font-size: 2rem;
  color: var(--primary-color);
}

.category-name {
  color: var(--text-color);
  font-size: 1.5rem;
  font-weight: 600;
  margin-bottom: 0.3rem;
}

.category-count {
  color: var(--text-muted);
  font-size: 0.9rem;
  margin: 0;
}

.category-posts {
  padding: 1rem;
}

.category-post-item {
  padding: 1.5rem;
  border-radius: var(--border-radius);
  transition: var(--transition);
  border-bottom: 1px solid rgba(127, 255, 0, 0.1);
}

.category-post-item:last-child {
  border-bottom: none;
}

.category-post-item:hover {
  background: var(--card-bg-hover);
  transform: translateX(8px);
}

.category-post-item .post-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.8rem;
  flex-wrap: wrap;
  gap: 1rem;
}

.category-post-item .post-date {
  color: var(--text-muted);
  font-size: 0.85rem;
  display: flex;
  align-items: center;
  gap: 0.3rem;
}

.category-post-item .post-tags {
  display: flex;
  gap: 0.3rem;
}

.category-post-item .tag {
  background: rgba(127, 255, 0, 0.1);
  color: var(--primary-color);
  padding: 0.15rem 0.4rem;
  border-radius: 4px;
  font-size: 0.7rem;
  font-weight: 500;
}

.category-post-item .post-title {
  margin-bottom: 0.8rem;
}

.category-post-item .post-title a {
  color: var(--text-color);
  text-decoration: none;
  font-size: 1.2rem;
  font-weight: 600;
  transition: var(--transition);
  line-height: 1.3;
}

.category-post-item .post-title a:hover {
  color: var(--primary-color);
}

.category-post-item .post-excerpt {
  color: var(--text-secondary);
  line-height: 1.5;
  margin-bottom: 1rem;
  font-size: 0.95rem;
}

.category-post-item .post-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.read-more-link {
  color: var(--primary-color);
  text-decoration: none;
  font-weight: 500;
  transition: var(--transition);
  display: flex;
  align-items: center;
  gap: 0.3rem;
  font-size: 0.9rem;
}

.read-more-link:hover {
  color: var(--hover-color);
}

.read-more-link i {
  transition: transform 0.3s ease;
}

.read-more-link:hover i {
  transform: translateX(4px);
}

@media (max-width: 768px) {
  .category-header-info {
    padding: 1.5rem;
  }
  
  .category-posts {
    padding: 0.5rem;
  }
  
  .category-post-item {
    padding: 1rem;
  }
  
  .category-post-item .post-meta {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.5rem;
  }
  
  .category-post-item .post-actions {
    flex-direction: column;
    align-items: flex-start;
    gap: 0.8rem;
  }
  
  .category-post-item:hover {
    transform: none;
  }
}
</style>
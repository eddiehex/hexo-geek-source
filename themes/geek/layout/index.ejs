<!-- Hero Section -->
<section class="hero-section">
  <div class="hero-content">
    <h1 class="hero-title">Welcome to <%= config.title %></h1>
    <p class="hero-subtitle"><%= config.description || "A minimalist geek theme for modern developers" %></p>
    <div class="hero-stats">
      <div class="stat-item">
        <span class="stat-number"><%= page.posts.length %></span>
        <span class="stat-label">Posts</span>
      </div>
      <div class="stat-item">
        <span class="stat-number"><%= site.categories.length %></span>
        <span class="stat-label">Categories</span>
      </div>
      <div class="stat-item">
        <span class="stat-number"><%= site.tags.length %></span>
        <span class="stat-label">Tags</span>
      </div>
    </div>
  </div>
</section>

<div class="posts-container">
  <!-- Featured Posts Section -->
  <% if (page.posts.length > 0) { %>
    <section class="featured-posts">
      <h2 class="section-title">Latest Posts</h2>
      <div class="posts-grid">
        <% page.posts.each(function(post, index){ %>
          <article class="post-card <%= index === 0 ? 'featured-post' : '' %>">
            <div class="post-header">
              <div class="post-meta">
                <span class="post-date">
                  <i class="fas fa-calendar"></i> 
                  <%= date(post.date, 'YYYY-MM-DD') %>
                </span>
                <% if(post.categories && post.categories.length){ %>
                  <span class="post-categories">
                    <i class="fas fa-folder"></i>
                    <%- list_categories(post.categories, { show_count: false, style: 'none', separator: ', ' }) %>
                  </span>
                <% } %>
                <% if(post.tags && post.tags.length){ %>
                  <span class="post-tags-preview">
                    <i class="fas fa-tags"></i>
                    <% post.tags.forEach(function(tag, i) { %>
                      <% if (i < 2) { %>
                        <span class="tag"><%= tag.name %></span>
                      <% } %>
                    <% }); %>
                    <% if (post.tags.length > 2) { %>
                      <span class="tag-more">+<%= post.tags.length - 2 %></span>
                    <% } %>
                  </span>
                <% } %>
              </div>
            </div>
            
            <div class="post-content-wrapper">
              <h2 class="post-title">
                <a href="<%- url_for(post.path) %>"><%= post.title %></a>
              </h2>
              
              <div class="post-excerpt">
                <% if(post.excerpt) { %>
                  <%- strip_html(post.excerpt).substring(0, 200) %>...
                <% } else if(post.content) { %>
                  <%- strip_html(post.content).substring(0, 200) %>...
                <% } %>
              </div>
              
              <div class="post-footer">
                <div class="read-info">
                  <span class="read-time">
                    <i class="fas fa-clock"></i>
                    <% const wordCount = strip_html(post.content).split(' ').length; %>
                    <% const readTime = Math.max(1, Math.ceil(wordCount / 200)); %>
                    <%= readTime %> min read
                  </span>
                </div>
                <a href="<%- url_for(post.path) %>" class="read-more">
                  <span>Read More</span>
                  <i class="fas fa-arrow-right"></i>
                </a>
              </div>
            </div>
          </article>
        <% }) %>
      </div>
    </section>
  <% } else { %>
    <section class="empty-state">
      <div class="empty-content">
        <i class="fas fa-file-alt empty-icon"></i>
        <h3>No Posts Yet</h3>
        <p>Start writing your first post to see it here!</p>
      </div>
    </section>
  <% } %>
  
  <!-- Pagination -->
  <% if (page.total > 1){ %>
    <nav class="pagination">
      <%- paginator({
        prev_text: '<i class="fas fa-chevron-left"></i> Previous',
        next_text: 'Next <i class="fas fa-chevron-right"></i>',
        escape: false,
        show_all: false,
        end_size: 1,
        mid_size: 2
      }) %>
    </nav>
  <% } %>
</div>

<style>
